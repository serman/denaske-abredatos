<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainview" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:orientation="vertical">

		<TableLayout android:layout_height="wrap_content" 
			android:paddingLeft="50dp" android:layout_width="fill_parent" android:gravity="center_horizontal"
			android:id="@+id/tableLayout1" android:stretchColumns="1" android:layout_gravity="center_horizontal">

			<TableRow> 

				<!-- 1. direccion -->


				<TextView android:id="@+id/field1" android:text="Dirección" android:padding="5dp"/>

				<EditText android:text="EditText" android:id="@+id/editText2"
					android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>


			</TableRow>

			<!-- 1. Ciudad -->

			<TableRow>
				<TextView android:id="@+id/field2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Ciudad" android:padding="5dp"/>

				<EditText android:text="EditText" android:id="@+id/editText2"
					android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>

			</TableRow> 

		</TableLayout>

	

	<LinearLayout android:layout_width="fill_parent"
		android:layout_weight="1"
		android:orientation="vertical" android:layout_height="fill_parent">

	
				<TextView android:id="@+id/field2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Descripción" android:padding="5dp" android:layout_gravity="right"/> 

				<EditText android:text="EditText" android:id="@+id/editText2"
					android:layout_width="fill_parent" android:layout_height="fill_parent"></EditText>


	</LinearLayout> 

	</LinearLayout>


</LinearLayout>
